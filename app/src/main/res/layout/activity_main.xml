<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.main.activity.MainActivity">

    <View
        android:id="@+id/mStatusView"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="0dp"/>

    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_above="@id/main_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <View
        android:layout_below="@id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#bfbfbf"/>

    <RadioGroup
        android:id="@+id/main_group"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="45dp">


        <RadioButton
            android:id="@+id/main_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_main_home"
            android:background="@null"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/main_home"
            android:textSize="10sp"
            android:textColor="@color/selector_main_text_color"
            android:drawablePadding="2dp"
            android:layout_marginBottom="2dp" />


        <RadioButton
            android:id="@+id/main_project_recommend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_main_project_recommend"
            android:background="@null"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/main_project_recommend"
            android:textSize="10sp"
            android:textColor="@color/selector_main_text_color"
            android:drawablePadding="2dp"
            android:layout_marginBottom="2dp" />


        <RadioButton
            android:id="@+id/main_public_recommend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_main_public_recommend"
            android:background="@null"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/main_public_recommend"
            android:textSize="10sp"
            android:textColor="@color/selector_main_text_color"
            android:drawablePadding="2dp"
            android:layout_marginBottom="2dp" />


        <RadioButton
            android:id="@+id/main_project_system"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_main_project_system"
            android:background="@null"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/main_project_system"
            android:textSize="10sp"
            android:textColor="@color/selector_main_text_color"
            android:drawablePadding="2dp"
            android:layout_marginBottom="2dp" />

        <RadioButton
            android:id="@+id/main_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_main_user"
            android:background="@null"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/main_user"
            android:textSize="10sp"
            android:textColor="@color/selector_main_text_color"
            android:drawablePadding="2dp"
            android:layout_marginBottom="2dp" />

    </RadioGroup>

</RelativeLayout>