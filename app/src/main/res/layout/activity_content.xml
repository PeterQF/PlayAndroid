<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".ui.content.activity.ContentActivity">

    <include
        layout="@layout/base_article_header"/>

    <com.qmuiteam.qmui.widget.QMUIProgressBar
        android:id="@+id/mProgressBar"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:qmui_type="type_rect"
        app:qmui_background_color="@color/white"
        app:qmui_progress_color="#B54434"
        android:visibility="gone"/>

    <com.qmuiteam.qmui.widget.webview.QMUIWebView
        android:id="@+id/mWebView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>