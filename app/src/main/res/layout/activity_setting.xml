<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/mSettingLayout"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".ui.setting.activity.SettingActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_clean_cache"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_main_text"
            android:layout_gravity="start|center_vertical"/>

        <TextView
            android:id="@+id/mCacheTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@mipmap/icon_arrow_right"
            android:layout_gravity="end|center_vertical"
            tools:text="100M"
            android:gravity="center_vertical"
            android:textColor="@color/color_main_sub_text"
            android:drawablePadding="@dimen/dp_10"
            android:textSize="12sp"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_night_mode"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_main_text"
            android:layout_gravity="start|center_vertical"/>

        <com.df.playandroid.widget.switchbutton.SwitchButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            app:sb_checked_color="@color/mainColor"
            app:sb_show_indicator="false"/>

    </FrameLayout>

</LinearLayout>